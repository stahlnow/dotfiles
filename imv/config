# Default config for imv

[options]

overlay_font = Monospace:12

#background = checks
#background = ff00ff
background = ffffff

# Suppress built-in key bindings, and specify them explicitly in this
# config file.
suppress_default_binds = true

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the
# command.
# alias = command to run

[binds]
# Define some key bindings

# Delete and then close an open image 
<Delete> = exec rm "$imv_current_file"; close
<F8> = exec rm "$imv_current_file"; close

# Rotate the currently open image by 90 degrees
r = exec mogrify -rotate 90 "$imv_current_file"

# Copy image to clipboard
y = exec xclip -selection clipboard -t image/png -i "$imv_current_file"
<Ctrl+c> = exec xclip -selection clipboard -t image/png -i "$imv_current_file"
<F5> = exec xclip -selection clipboard -t image/png -i "$imv_current_file"
#<Shift+C> = exec wl-copy < "$imv_current_file"

# Copy filename
<Ctrl+f> = exec echo -n "$imv_current_file" | xclip -selection clipboard
#<Shift+F> = exec echo "$imv_current_file" | wl-copy

# Edit image
e = exec krita "$imv_current_file" 2> /dev/null &> /dev/null &; close
<Ctrl+e> = exec krita "$imv_current_file" 2> /dev/null &> /dev/null &; close

# Image navigation
<space> = next
<BackSpace> = prev
<Left> = prev
<bracketleft> = prev
<Right> = next
<bracketright> = next
gg = goto 0
<Shift+G> = goto -1

# Panning
j = pan 0 -50
k = pan 0 50
h = pan 50 0
l = pan -50 0

# Zooming
<Up> = zoom 1
<Shift+plus> = zoom 1
i = zoom 1
<Down> = zoom -1
<minus> = zoom -1
o = zoom -1

# Other commands
q = quit
x = close
f = fullscreen
d = overlay
p = exec echo $imv_current_file
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset

# Gif playback
<period> = next_frame
# <space> = toggle_playing
<Shift+space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1

