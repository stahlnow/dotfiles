# default postscript page size
psPaperSize A4

# vim
bind h any scrollLeft(32)
bind l any scrollRight(32)
bind k any scrollUp(32)
bind j any scrollDown(32)

bind r any rotateCW

bind f11 any toggleFullScreenMode

# scroll faster
bind mousePress4 any scrollUpPrevPage(64)
bind mousePress5 any scrollDownNextPage(64)

# default to fit page
initialZoom page

# make initial window 200% for 4k screen
defaultFitZoom 200

# default to continues pages mode
initialDisplayMode continues

# hide sidebar
initialSidebarState no

# Ctrl + mouse wheel to zoom in / out
bind ctrl-mousePress4 any zoomIn
bind ctrl-mousePress5 any zoomOut
bind shift-mousePress4 any scrollLeft(32)
bind shift-mousePress5 any scrollRight(32)

# evil hack to get the fonts right
fontFile Times-Roman		    /usr/share/ghostscript/Resource/Font/NimbusRoman-Regular
fontFile Times-Italic		    /usr/share/ghostscript/Resource/Font/NimbusRoman-Italic
fontFile Times-Bold		        /usr/share/ghostscript/Resource/Font/NimbusRoman-Bold
fontFile Times-BoldItalic	    /usr/share/ghostscript/Resource/Font/NimbusRoman-BoldItalic
fontFile Helvetica		        /usr/share/ghostscript/Resource/Font/NimbusSans-Regular
fontFile Helvetica-Oblique	    /usr/share/ghostscript/Resource/Font/NimbusSans-Italic
fontFile Helvetica-Bold		    /usr/share/ghostscript/Resource/Font/NimbusSans-Bold
fontFile Helvetica-BoldOblique	/usr/share/ghostscript/Resource/Font/NimbusSans-BoldItalic
fontFile Courier		        /usr/share/ghostscript/Resource/Font/NimbusMonoPS-Regular
fontFile Courier-Oblique	    /usr/share/ghostscript/Resource/Font/NimbusMonoPS-Italic
fontFile Courier-Bold		    /usr/share/ghostscript/Resource/Font/NimbusMonoPS-Bold
fontFile Courier-BoldOblique	/usr/share/ghostscript/Resource/Font/NimbusMonoPS-BoldItalic
fontFile Symbol			        /usr/share/ghostscript/Resource/Font/StandardSymbolsPS
fontFile ZapfDingbats		    /usr/share/ghostscript/Resource/Font/D050000L

