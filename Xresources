!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! URXVT settings
! --- URxvt defaults
URxvt*geometry:          256x96 
URxvt*cursorBlink:        0 
URxvt*cursorUnderline:    0
URxvt*urgentOnBell:       true
!URxvt*letterSpace:        -.30
URxvt*internalBorder:     2
URxvt*scrollBar:          false
URxvt.transparent:        false


!URxvt*termName: xterm-256color
URxvt*termName: rxvt-unicode-256color

! Disable PrtSc-button print so we dont accidentally print the whole tmux session 
URxvt.print-pipe:  "cat > /dev/null"


Xft.dpi:        96:unscaled
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintmedium
Xft.lcdfilter:  lcddefault

URxvt*iconFile: /usr/share/icons/Adwaita/512x512/apps/utilities-terminal.png

! Enable Ctrl+Shift bindings
URxvt.iso14755: false
URxvt.iso14755_52: false

*scrollBar: false
*saveLines: 10000

URxvt*loginShell:       true
URxvt*inheritPixmap:    false
URxvt*intensityStyles:  true
URxvt*skipBuiltinGlyphs:    true

! Font
URxvt.font: -*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-1
URxvt.boldFont: -*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-1
URxvt.italicFont: -*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-1
URxvt.boldItalicFont: -*-terminus-medium-r-*-*-12-*-*-*-*-*-iso10646-1

!URxvt*font: xft:Terminus:pixelsize=12,xft:Inconsolata\ for\ Powerline:pixelsize=12
!URxvt*font: xft:Source\ Code\ Pro\ Medium:pixelsize=10:antialias=true:hinting=true,xft:Source\ Code\ Pro\ Medium:pixelsize=13:antialias=true:hinting=true
!URxvt.font: xft:Inconsolata for Powerline:size=10:style=Medium

URxvt.allow_bold: true

! Fix font space
URxvt*letterSpace: -0.5
URxvt*lineSpace: 0  // pixels, default = 1



! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! Disable the scrollback buffer for the secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
! add better mouse wheel support from rxvt-unicode-better-wheel-scrolling
URxvt.secondaryWheel: 1

! Fix Home End buttons
URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
URxvt.keysym.KP_End:  \033[4~

! Perl extensions
! URxvt.perl-ext:
URxvt.perl-ext-common: default,matcher,fullscreen,resize-font,selection-to-clipboard,clipboard

! Clipboard
! URxvt.keysym.C-c:   perl:clipboard:copy
URxvt.keysym.C-v:   perl:clipboard:paste

! Fullscreen
URxvt.keysym.F11: perl:fullscreen:switch

! Resize Font
! URxvt.resize-font.smaller: C-Down
! URxvt.resize-font.bigger: C-Up


! Keyboard search (needs perl extension keyboard-select)
! URxvt.keysym.M-s:   perl:keyboard-select:search

! URLs
URxvt.url-launcher:     chromium
URxvt.matcher.button:   1
URxvt.keysym.C-Delete:  perl:matcher:last
URxvt.keysym.M-Delete:  perl:matcher:list
URxvt.matcher.rend.0:   Uline Bold fg5


